extends layout.jade

block content
	.content-padded
		h4 Profile
		h5 You are logged in as #{user.username}

		if(votes.length>0)
			h5 You've RSVPd for tonight!
			ul(class='table-view')
				each vote in votes
					li 

						a(
							class='icon icon-close' 
							href='/api/notgoing/place/' + vote.bar + '/' +vote.barname
						)
						span #{vote.barname}
					
		else
			h5 You haven't RSVPd for tonight!